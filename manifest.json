{
  "manifest_version": 3,
  "name": "My Chrome Extension",
  "version": "1.0",
  "description": "A sample Chrome extension",
  "background": {
    "service_worker": "dist/background.bundle.js"
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": ["storage", "activeTab", "webRequest"],
  "commands": {
    "reload_extension": {
      "suggested_key": {
        "default": "Ctrl+Shift+R"
      },
      "description": "Reload the extension"
    }
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://payment.ivacbd.com/",
        "http://localhost:5000/login",
        "https://if-hub.pkshohag240.workers.dev/"
      ],
      "js": ["dist/content.bundle.js"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": ["http://*/*", "https://*/*"]
}
